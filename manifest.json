{
  "manifest_version": 3,
  "name": "레드마인 일감 등록 도우미",
  "version": "2.0",
  "description": "레드마인 이슈 등록을 도와주는 크롬 확장프로그램",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["https://snow.cyberdigm.co.kr/redmine/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/logo-16.png",
      "48": "logo/logo-48.png",
      "128": "logo/logo-128.png"
    }
  },
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://snow.cyberdigm.co.kr/redmine/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["companymap.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
