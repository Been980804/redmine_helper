{
  "manifest_version": 3,
  "name": "레드마인 일감 등록 도우미",
  "version": "1.2",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["https://snow.cyberdigm.co.kr/redmine/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://snow.cyberdigm.co.kr/redmine/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["companymap.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
